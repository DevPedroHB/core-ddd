{
	"author": "Pedro Henrique BÃ©rgamo",
	"dependencies": {
		"@faker-js/faker": "^9.6.0",
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.0.1",
		"@pedrohb/core-ddd": "workspace:*",
		"@pedrohb/database": "workspace:*",
		"@pedrohb/env": "workspace:*",
		"date-fns": "^4.1.0",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"zod": "^3.24.2"
	},
	"description": "API de exemplo usando o pacote @pedrohb/core-ddd",
	"devDependencies": {
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@pedrohb/typescript-config": "workspace:*",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.7",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"dotenv-cli": "^8.0.0",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"collectCoverageFrom": ["**/*.(t|j)s"],
		"coverageDirectory": "../coverage",
		"moduleFileExtensions": ["js", "json", "ts"],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^@test/(.*)$": "<rootDir>/test/$1"
		},
		"rootDir": ".",
		"testEnvironment": "node",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		}
	},
	"license": "MIT",
	"name": "@pedrohb/example",
	"private": true,
	"scripts": {
		"build": "nest build",
		"env:load": "dotenv -e ../../.env --",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:dev": "pnpm env:load nest start --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test:watch": "jest --watch"
	},
	"version": "1.0.0"
}

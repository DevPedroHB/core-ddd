{
	"collectCoverageFrom": ["**/*.(t|j)s"],
	"coverageDirectory": "../coverage",
	"moduleFileExtensions": ["js", "json", "ts"],
	"moduleNameMapper": {
		"^@/(.*)$": "<rootDir>/src/$1",
		"^@tests/(.*)$": "<rootDir>/tests/$1"
	},
	"rootDir": ".",
	"testEnvironment": "node",
	"testRegex": ".*\\.e2e-spec\\.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	}
}

{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": [
		"NODE_ENV",
		"PORT",
		"JWT_PRIVATE_KEY",
		"JWT_PUBLIC_KEY",
		"NPM_URL"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": [
				"NODE_ENV",
				"PORT",
				"JWT_PRIVATE_KEY",
				"JWT_PUBLIC_KEY",
				"NPM_URL"
			],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"start:dev": {
			"cache": false,
			"persistent": true
		}
	},
	"ui": "tui"
}
